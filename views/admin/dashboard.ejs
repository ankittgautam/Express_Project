<%- include('../header.ejs') %>
  <br><br><br><br><br>
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-12">
        <table class="table table-bordered">
          <tr>
            <th>S.No</th>
            <th>Name</th>
            <th>Email</th>
            <th>status</th>
            <th>comment</th>
            <th></th>
            <th>action</th>
          </tr>
          <% i=1 %>
            <% p.forEach((c)=>{ %>
              <tr>
                <td>
                  <%=c._id %>
                </td>
                <td>
                  <%= c.name %>
                </td>
                <td>
                  <%= c.email %>
                </td>
                <td>
                  <%= c.status %>
                </td>
                <td>
                  <form action="/updatestatus/<%= c._id %>" method="post">
                    <textarea name="comment" id=""></textarea>
                </td>
                <td>
                  <button type="submit" name="status" class="btn btn-info" value="Approved">Approved</button>
                  <button type="submit" name="status" class="btn btn-danger" value="Reject">Reject</button>
                  </form>
                </td>
                <td>
                  <a href="/courseview/<%= c._id %>" class="btn btn-info">view</a>
                  <a href="/coursedelete/<%= c._id %>" class="btn btn-danger">delete</a>
                </td>
              </tr>
              <% }) %>
        </table>
      </div>
    </div>
  </div>
  <%- include('../footer.ejs') %>